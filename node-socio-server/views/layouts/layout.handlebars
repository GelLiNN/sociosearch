<!DOCTYPE HTML>
<html>
    <head>
        <title>Sociosearch</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
        <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
        <link rel="manifest" href="/assets/manifest.json">
        <link rel="mask-icon" href="/assets/safari-pinned-tab.svg" color="#5bbad5">
        <!-- jQuery -->
        <script src="/js-scripts/jquery-3.2.1.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="/js-scripts/bootstrap.js"></script>
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <div class="container">
          <div class="header clearfix">
            <nav>
              <ul class="nav nav-pills pull-right">
                <!-- Smart NAV for when user is logged in -->
                {{#if user}}
                    <li role="presentation"><a href="/">Dashboard</a></li>
                    <li role="presentation"><a href="/users/search">Search</a></li>
                    <li role="presentation"><a href="/users/about">About</a></li>
                    <li role="presentation"><a href="/users/logout">Logout</a></li>
                {{else}}
                    <li role="presentation"><a href="/users/login">Login</a></li>
                    <li role="presentation"><a href="/users/register">Register</a></li>
                    <li role="presentation"><a href="/users/about">About</a></li>
                {{/if}}
              </ul>
            </nav>
            <h3 class="text-muted">S O C I O S E A R C H</h3>
          </div>

          <div class="row">
            <div class="col-lg-12">
                <!-- Handle error and success flash messages -->
                {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                {{/if}}
                {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                {{{body}}}
            </div>
          </div>

          <footer class="footer">
            <p>&copy; 2017 SocioSearch &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
          </footer>

        </div> <!-- /container -->
    </body>
</html>
