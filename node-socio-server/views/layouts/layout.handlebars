<!DOCTYPE HTML>
<html>
    <head>
        <title>SocioSearch</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
        <link rel='stylesheet' href='/stylesheets/metricsgraphics.css' />
        <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
        <link rel="manifest" href="/assets/manifest.json">
        <link rel="mask-icon" href="/assets/safari-pinned-tab.svg" color="#5bbad5">
        <!-- jQuery -->
        <script src="/js-scripts/jquery-3.2.1.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="/js-scripts/bootstrap.js"></script>
        <!-- D3 JavaScript -->
        <script src="/js-scripts/d3.min.js"></script>
        <!-- Metrics Graphics JavaScript -->
        <script src="/js-scripts/metricsgraphics.min.js"></script>
        <!-- Sociosearch Functional JavaScript -->
        <script src="/js-scripts/sociosearch.js"></script>
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <div class="container" id="page-container">
            <!-- Fixed Nav Bar -->
            <div class="header clearfix">
                <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
                  <div class="container-fluid">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <span class="navbar-brand">S O C I O S E A R C H</span>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                      <ul class="nav navbar-nav navbar-right">
                          <!-- Smart NAV functions for when user is logged in -->
                          {{#if user}}
                              <li><a href="/">Dashboard</a></li>
                              <li><a href="/users/search">Search</a></li>
                              <li><a href="/users/about">About</a></li>
                              <li><a href="/users/logout">Logout</a></li>
                          {{else}}
                              <li><a href="/users/login">Login</a></li>
                              <li><a href="/users/register">Register</a></li>
                              <li><a href="/users/about">About</a></li>
                          {{/if}}
                      </ul>
                    </div>
                  </div>
                </nav>
          </div>

          <!-- Content Area with flash message support -->
          <div class="row" id="main-content">
            <div class="col-lg-12">
                <!-- Handle error and success flash messages -->
                {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                {{/if}}
                {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                {{{body}}}
            </div>
          </div>
        </div> <!-- /container -->
        <footer class="footer" id="sociosearch-footer">
          <p>&copy; 2017 SocioSearch &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>
    </body>
</html>
