<!--Search Page for SocioSearch -->
<h2 class="page-header" id="blurb">Enter a search term, and see just how buzzing the topic is on Social Media!</h2>

<!-- Search Form -->
<form method="post" action="/users/search">
    <ul class="searchbar">
        <li id="settings">
            <a href="#"><img src="../assets/settings.png" /></a>
        </li>
        <li>
            <a href="#">Search Types</a>
        </li>
        <li id="search">
            <input type="text" name="search_text" id="search_text" placeholder="Search"/>
            <input type="submit" name="search_button" id="search_button" value="" />
        </li>
        <li id="search_options">
            <a href="#">Filters</a>
            <ul class="subnav">
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Ipsum</a></li>
                <li><a href="#">Dolar</a></li>
                <li><a href="#">Bones</a></li>
            </ul>
        </li>
    </ul>
</form>
<div class="row" id="thumbnail-results">
    {{#each tweetsForClient}}
        <div class="col-md-3" id="search-result">
          <h2>{{this.user.name}}</h2>
          <p>{{this.text}}</p>
          <p><a class="btn btn-primary" href="" role="button">View details &raquo;</a></p>
        </div>
    {{/each}}

    {{#each googleTrends}}
        <div class="col-md-2" id="search-result">
          <h2>{{this.formattedTime}}</h2>
          <p>Rank {{this.value}}</p>
        </div>
    {{/each}}
</div>
<script src="../js-scripts/prefixfree-1.0.7.js" type="text/javascript"></script>
